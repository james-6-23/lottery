# Docker Compose Environment Variables
# Copy this file to .env and update the values

# ===================
# Database Settings
# ===================
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_NAME=scratch_lottery

# ===================
# JWT Settings
# ===================
# Generate a secure random string for production
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ACCESS_EXPIRY=15
JWT_REFRESH_EXPIRY=7

# ===================
# OAuth Settings
# ===================
# Set to 'prod' for production, 'dev' for development
OAUTH_MODE=prod
LINUXDO_CLIENT_ID=your-linuxdo-client-id
LINUXDO_SECRET=your-linuxdo-secret
LINUXDO_CALLBACK_URL=https://your-domain.com/oauth/callback

# ===================
# Redis Settings
# ===================
# Leave empty for no password
REDIS_PASSWORD=

# ===================
# Payment Settings
# ===================
PAYMENT_ENABLED=false
EPAY_MERCHANT_ID=
EPAY_SECRET=
EPAY_CALLBACK_URL=https://your-domain.com/api/payment/callback

# ===================
# Encryption Settings
# ===================
# Must be exactly 32 bytes for AES-256
ENCRYPTION_KEY=32-byte-key-for-aes-encryption!
