# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Database Configuration
# Use "sqlite" for local development, "postgres" for production
DB_DRIVER=sqlite
DB_PATH=./data/lottery.db

# PostgreSQL settings (for production)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=scratch_lottery

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_EXPIRY=15
JWT_REFRESH_EXPIRY=7

# OAuth Configuration
# Use "dev" for local development, "prod" for production
OAUTH_MODE=dev
LINUXDO_CLIENT_ID=
LINUXDO_SECRET=
LINUXDO_CALLBACK_URL=https://your-domain.com/oauth/callback

# Cache Configuration
# Use "memory" for local development, "redis" for production
CACHE_DRIVER=memory
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Payment Configuration
PAYMENT_ENABLED=false
EPAY_MERCHANT_ID=
EPAY_SECRET=
EPAY_CALLBACK_URL=

# Encryption Key (32 bytes for AES-256)
ENCRYPTION_KEY=32-byte-key-for-aes-encryption!
